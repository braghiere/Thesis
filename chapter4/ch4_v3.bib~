@article{Goll2012,
abstract = {Terrestrial carbon (C) cycle models applied for climate projections$\backslash$nsimulate a strong increase in net primary productivity (NPP) due to$\backslash$nelevated atmospheric CO2 concentration during the 21st century. These$\backslash$nmodels usually neglect the limited availability of nitrogen (N) and$\backslash$nphosphorus (P), nutrients that commonly limit plant growth and soil$\backslash$ncarbon turnover. To investigate how the projected C sequestration is$\backslash$naltered when stoichiometric constraints on C cycling are considered, we$\backslash$nincorporated a P cycle into the land surface model JSBACH (Jena Scheme$\backslash$nfor Biosphere-Atmosphere Coupling in Hamburg), which already includes$\backslash$nrepresentations of coupled C and N cycles.$\backslash$nThe model reveals a distinct geographic pattern of P and N limitation.$\backslash$nUnder the SRES (Special Report on Emissions Scenarios) A1B scenario, the$\backslash$naccumulated land C uptake between 1860 and 2100 is 13{\%} (particularly at$\backslash$nhigh latitudes) and 16{\%} (particularly at low latitudes) lower in$\backslash$nsimulations with N and P cycling, respectively, than in simulations$\backslash$nwithout nutrient cycles. The combined effect of both nutrients reduces$\backslash$nland C uptake by 25{\%} compared to simulations without N or P cycling.$\backslash$nNutrient limitation in general may be biased by the model simplicity,$\backslash$nbut the ranking of limitations is robust against the parameterization$\backslash$nand the inflexibility of stoichiometry. After 2100, increased$\backslash$ntemperature and high CO2 concentration cause a shift from N to P$\backslash$nlimitation at high latitudes, while nutrient limitation in the tropics$\backslash$ndeclines. The increase in P limitation at high-latitudes is induced by a$\backslash$nstrong increase in NPP and the low P sorption capacity of soils, while a$\backslash$ndecline in tropical NPP due to high autotrophic respiration rates$\backslash$nalleviates N and P limitations. The quantification of P limitation$\backslash$nremains challenging. The poorly constrained processes of soil P sorption$\backslash$nand biochemical mineralization are identified as the main uncertainties$\backslash$nin the strength of P limitation. Even so, our findings indicate that$\backslash$nglobal land C uptake in the 21st century is likely over-estimated in$\backslash$nmodels that neglect P and N limitations. In the long term, insufficient$\backslash$nP availability might become an important constraint on C cycling at high$\backslash$nlatitudes. Accordingly, we argue that the P cycle must be included in$\backslash$nglobal models used for C cycle projections.},
author = {Goll, D. S. and Brovkin, V. and Parida, B. R. and Reick, C. H. and Kattge, J. and Reich, P. B. and {Van Bodegom}, P. M. and Niinemets, {\"{U}}},
doi = {10.5194/bg-9-3547-2012},
