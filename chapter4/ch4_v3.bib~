@article{Govaerts1998,
abstract = {A model of radiation transfer in three-dimensional (3D)$\backslash$nheterogeneous media is designed and evaluated. This model implements$\backslash$nstate-of-the-art Monte Carlo ray-tracing techniques and is dedicated to$\backslash$nthe study of light propagation in terrestrial environments. It is$\backslash$ndesigned as a virtual laboratory, where scenes of arbitrary complexity$\backslash$ncan be described explicitly and where the relevant radiative processes$\backslash$ncan be represented in great detail, at spatial scales relevant to$\backslash$nsimulate actual measurements. The approach capitalizes on the existing$\backslash$nunderstanding of the elementary radiative processes and recognizes that$\backslash$nthe major difficulty in accurately describing the radiation field after$\backslash$nits interaction with a typical terrestrial scene results from the$\backslash$ncomplexity of the structure and the diversity of the properties of the$\backslash$nelements of the scene. The output of the model can be customized to$\backslash$naddress various scientific investigations, including the determination$\backslash$nof absorption profiles or of light-scattering distributions. The$\backslash$nperformance of the model is evaluated through detailed comparisons with$\backslash$nlaboratory measurements of an artificial target as well as with other$\backslash$nestablished reflectance models for plant canopies},
