journal = {Agricultural and Forest Meteorology},
keywords = {Biosphere-atmosphere interactions,Ecohydrology,Evaporation},
mendeley-groups = {MC Report 3,MC Report 4},
number = {1-2},
pages = {13--39},
title = {{How plant functional-type, weather, seasonal drought, and soil physical properties alter water and energy fluxes of an oak-grass savanna and an annual grassland}},
volume = {123},
year = {2004}
