journal = {Ecological Modelling},
keywords = {GENERAL-CIRCULATION MODEL; NET PRIMARY PRODUCTIVIT},
number = {2-3},
pages = {99--119},
pmid = {67},
title = {{Daily canopy photosynthesis model through temporal and spatial scaling for remote sensing applications}},
