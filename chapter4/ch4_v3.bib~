@article{Ludlow1971,
abstract = {A general theory is presented which describes the interaction between radiation and a spruce forest. The canopy is divided into a series of layers so that all the radiation fluxes can be computed if the layer interception, reflection, and transmission properties are known. The effects of multiple scattering at any wavelength and variable diffuse angular distribution are included. The layer properties are calculated either assuming the foliage to be randomly distributed and with or without stems and branches, or assuming the foliage to be clumped with non-random wood and leaf distributions which are derived from the actual canopy (shoots and whorls). The theory is extended to include an estimate of the gap-size distribution so that penumbral effects can be incorporated into the transmission distribution predictions. The results of the theory are compared to measurements made in a visible (0.51-0.57 $\mu$ m) and a near infra-red (0.73-1.0 $\mu$ m) waveband. The measurements were obtained by traversing a sensor along a 14 m scan path at four levels within the canopy. The best agreement between theory and measurements was obtained with the grouping theory which included stems and branches. On the average the random theory (without branches) agreed reasonably well with the measurements but predicted considerably more energy in the form of scattered radiation than beam when compared to the grouping theory. The grouping theory is more likely to be correct and the difference could be significant in predictions of photosynthesis. The ratio of visible to near infra-red canopy transmittance did not prove to be a good indicator of leaf area index because of the extreme importance of canopy structure, but the diffuse angular distribution may be a reasonable indicator since it is relatively insensitive to canopy structure, sun inclination angle, or the presence of branches. The calculated visible transmission distribution based on the grouping theory agreed well with the measurements. It is probable that the most important penumbral contribution for photosynthesis arises from gaps between needles on shoots. It should be noted that the predictions of this theory rely solely on canopy structural and spectral information and incident radiation above the canopy as inputs; no radiation measurements within the canopy are required.},
author = {Ludlow, M. M. and Jarvis, P G},
doi = {10.2307/2402692},
isbn = {0021-8901},
issn = {00218901},
journal = {The Journal of Applied Ecology},
month = {dec},
number = {3},
pages = {925},
title = {{Photosynthesis in Sitka Spruce (Picea sitchensis) (Bong.) Carr.). I. General Characteristics}},
volume = {8},
year = {1971}
