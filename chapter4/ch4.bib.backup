journal = {Tree Physiology},
keywords = {Models, Biological,Plant Leaves,Plant Leaves: metabolism,Plant Leaves: physiology,Plant Transpiration,Plant Transpiration: physiology,Trees,Trees: metabolism,Trees: physiology,Water,Water: metabolism},
mendeley-groups = {Chapter 4/4.5 Participant models},
