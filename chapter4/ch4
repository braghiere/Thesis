\begin{figure}
        \centering
        \ContinuedFloat
        \subfloat[ESES1]{\includegraphics[width=1\textwidth]{/home/gp030065/FLUXNET_stats/anomaly_plots/GPP_scaled_anomaly_mesh_ESES1.png}
        \label{fig:anom_ESES1}}
        \subfloat[NLCa1]{\includegraphics[width=1\textwidth]{/home/gp030065/FLUXNET_stats/anomaly_plots/GPP_scaled_anomaly_mesh_NLCa1.png}
